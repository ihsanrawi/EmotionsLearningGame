<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_bg"
    tools:context="com.example.emotionslearninggame.AgeGroup">


    <Button
        android:id="@+id/below7"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:layout_above="@+id/above7"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="69dp"
        android:background="@drawable/shape"
        android:text="5 to 6 Years Old"
        android:textColor="#DADADA"
        android:typeface="serif" />

    <Button
        android:id="@+id/above7"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/below7"
        android:layout_marginBottom="200dp"
        android:background="@drawable/shape"
        android:text="7 to 9 Years Old"
        android:textColor="#DADADA"
        android:typeface="serif" />
</RelativeLayout>