<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E5FCF5"
    tools:context="com.example.emotionslearninggame.Flashcard.HowYouFeel">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:orientation="vertical">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="#E5FCF5"
            android:minHeight="?attr/actionBarSize"
            android:theme="?attr/actionBarTheme" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="58dp">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/angry_Btn"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="55dp"
            android:fontFamily="cursive"
            android:text="When you feel "
            android:textAlignment="viewStart"
            android:textSize="52sp" />

        <ImageButton
            android:id="@+id/fearBtn"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_below="@+id/textView4"
            android:layout_marginTop="39dp"
            android:layout_toEndOf="@+id/angry_Btn"
            android:background="@android:color/transparent"
            android:paddingLeft="2dp"
            android:paddingRight="2dp"
            app:srcCompat="@drawable/fear_emoji_small" />

        <ImageButton
            android:id="@+id/sadBtn"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_alignBottom="@+id/fearBtn"
            android:layout_toEndOf="@+id/fearBtn"
            android:background="@android:color/transparent"
            android:paddingLeft="2dp"
            android:paddingRight="2dp"
            app:srcCompat="@drawable/sad_emoji_small" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/toolbar"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:fontFamily="cursive"
            android:text="Today I Feel"
            android:textAlignment="center"
            android:textSize="36sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/emotionTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView5"
            android:layout_toEndOf="@+id/disgustBtn"
            android:textAlignment="center"
            android:textSize="36sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/bigEmotionIV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="73dp"
            android:layout_marginLeft="10dp"
            android:layout_toStartOf="@+id/emotionTv"
            app:srcCompat="@drawable/angry_emoji" />

        <TextView
            android:id="@+id/bigEmotionTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/bigEmotionIV"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginStart="15dp"
            android:layout_toEndOf="@+id/bigEmotionIV"
            android:textAlignment="textStart"
            android:textSize="48sp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/disgustBtn"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_alignTop="@+id/angry_Btn"
            android:layout_toEndOf="@+id/joyBtn"
            android:background="@android:color/transparent"
            android:paddingLeft="2dp"
            android:paddingRight="2dp"
            app:srcCompat="@drawable/disgust_emoji_small" />

        <ImageButton
            android:id="@+id/angry_Btn"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_alignTop="@+id/fearBtn"
            android:layout_toEndOf="@+id/disgustBtn"
            android:background="@android:color/transparent"
            android:paddingLeft="2dp"
            android:paddingRight="2dp"
            app:srcCompat="@drawable/angry_emoji_small" />

        <ImageButton
            android:id="@+id/surpriseBtn"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_alignTop="@+id/sadBtn"
            android:layout_toEndOf="@+id/sadBtn"
            android:background="@android:color/transparent"
            android:paddingLeft="2dp"
            android:paddingRight="2dp"
            app:srcCompat="@drawable/surprise_emoji_small" />

        <ImageButton
            android:id="@+id/joyBtn"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/disgustBtn"
            android:layout_marginLeft="15dp"
            android:layout_marginStart="14dp"
            android:background="@android:color/transparent"
            android:paddingLeft="2dp"
            android:paddingRight="2dp"
            app:srcCompat="@drawable/joy_emoji_small" />
    </RelativeLayout>

</RelativeLayout>
